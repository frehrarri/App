@model ManageTeamsVM

<div id="manage-teams-container" class="container">
    <form id="manage-teams" class="container">
        @Html.AntiForgeryToken()

      

        <div id="dv-allocate-personnel" class="container table-responsive">
            <div class="allocate-header">
                <h4>Assign Personnel</h4>
                <div class="dv-teams-nav">
                    <button type="button" class="btn-get-allocate-teams">Assign</button>
                    <button type="button" class="btn-get-manage-teams">Manage</button>
                </div>
            </div>

            <table id="tbl-allocate-personnel" class="app-table table">
                <thead>
                    <tr class="app-table-row" >
                        <th class="app-table-header" scope="col"></th>
                        <th class="app-table-header" scope="col">Team</th>
                        <th class="app-table-header" scope="col">First Name</th>
                        <th class="app-table-header" scope="col">Last Name</th>
                        <th class="app-table-header" scope="col">Username</th>
                        <th class="app-table-header" scope="col">Email</th>
                        <th class="app-table-header" scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teamMember in Model.ManageTeamsDTO.TeamMembers)
                    {
                        <tr class="app-table-row">
                            <td class="app-table-data">
                                <input type="checkbox" />
                            </td>
                            <td class="app-table-data">
                                <select class="sel-assign-team-member" data-userid="@teamMember.EmployeeId">
                                    <option value="" >Unassigned</option>
                                    @foreach (var team in Model.ManageTeamsDTO.Teams)
                                    {
                                        <option value="@team.TeamId" checked="@(team.TeamId == teamMember.TeamId)">@team.Name</option>
                                    }
                                </select>
                            </td>
                            <td class="app-table-data">
                                @teamMember.FirstName
                            </td>
                            <td class="app-table-data">
                                @teamMember.LastName
                            </td>
                            <td class="app-table-data">
                                @teamMember.Username
                            </td>
                            <td class="app-table-data">
                                @teamMember.Email
                            </td>
                            <td class="app-table-data">
                                @teamMember.PhoneNumber
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <div id="dv-team-member-save-btn">
                <button id="team-member-save-btn" class="primary-btn">Save</button>
            </div>
            
        </div>

        <div id="dv-manage-teams" class="container table-responsive hidden">
           @*  table-responsive *@
            <div class="manage-teams-header">
                <h4>Manage Teams</h4>
                <div class="dv-teams-nav">
                    <button type="button" class="btn-get-allocate-teams">Assign</button>
                    <button type="button" class="btn-get-manage-teams">Manage</button>
                </div>
            </div>

            <table id="manage-teams" class="app-table table">
                <thead>
                    <tr class="app-table-row">
                        <th class="app-table-header">
                            <input type="hidden" />
                        </th>
                        <th class="app-table-header">Team</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model.ManageTeamsDTO.Teams)
                    {
                        <tr class="app-table-row">
                            <td class="app-table-data">
                                <input type="checkbox" />
                            </td>
                            <td class="app-table-data">
                                @team.Name
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div id="dv-team-btns" class="container">
                <div id="btn-container">
                    <button id="add-team-btn" class="primary-btn" type="button">Add</button>
                    <button id="remove-team-btn" class="warning-btn" type="button">Remove</button>
                </div>
                
                <button id="team-save-btn" class="primary-btn">Save</button>
            </div>
            

            
        </div>

    </form>
</div>