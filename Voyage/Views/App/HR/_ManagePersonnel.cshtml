@model ManagePersonnelVM

<div id="register-personnel-container">
    
</div>



<div id="manage-personnel-container">
    <form id="manage-personnel">
        @Html.AntiForgeryToken()
        <div id="dv-personnel-grid">

            <div class="header-flex">
                <div id="dv-header-container">
                    <h4>Manage Personnel</h4>
                </div>
                <div id="dv-register-personnel">
                    <button id="self-register-button" class="primary-btn" type="button">Register</button>
                    <div id="dv-send-registration-email">
                        <button id="register-email-button" class="secondary-btn" type="button">Send</button>
                        <input type="email" placeholder="Employee Registration Email" />
                    </div>
                </div>
            </div>
            
            <table class="app-table">
                <thead>
                    <tr class="app-table-row">
                        <th class="app-table-header"></th>
                        <th class="app-table-header">Role</th>
                        <th class="app-table-header">Employee Id</th>
                        <th class="app-table-header">First Name</th>
                        <th class="app-table-header">Last Name</th>
                        <th class="app-table-header">Username</th>
                        <th class="app-table-header">Email</th>
                        <th class="app-table-header">Phone</th>
                        <th class="app-table-header">Active</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Personnel)
                    {
                        Guid guid = Guid.NewGuid();

                        <tr class="app-table-row" data-key="@guid">
                            <td class="app-table-data">
                                <input type="checkbox" @(user.RoleId == (int)Constants.DefaultRoles.Principal ? "disabled" : "") />
                            </td>
                            <td>
                                <select class="sel-assign-role" data-key="@guid" data-userid="@user.EmployeeId" @(user.RoleId == (int)Constants.DefaultRoles.Principal ? "disabled" : "")>

                                    @if (user.RoleId == (int)Constants.DefaultRoles.Unassigned){
                                        <option value="@((int)Constants.DefaultRoles.Unassigned)" selected>Unassigned</option>
                                    }
                                    else
                                    {
                                        <option value="@((int)Constants.DefaultRoles.Unassigned)">Unassigned</option>
                                    }

                                    @foreach (var role in Model.Roles)
                                    {
                                        //prevent duplicate unassigned, keep it as default value
                                        if (role.Name == Constants.DefaultRoles.Unassigned.ToString())
                                            continue;

                                        //prevent assigning of principal role
                                        if (user.RoleId != (int)Constants.DefaultRoles.Principal && role.RoleId == (int)Constants.DefaultRoles.Principal)
                                            continue;

                                        //default to assigned roles
                                        if (role.RoleId == user.RoleId)
                                        {
                                            <option value="@role.RoleId" selected>@role.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@role.RoleId">@role.Name</option>
                                        }
                                    }
                                </select>
                            </td>
                            <td id="employeeid" class="app-table-data">
                                @user.EmployeeId
                            </td>
                            <td class="app-table-data">
                                @user.FirstName
                            </td>
                            <td class="app-table-data">
                                @user.LastName
                            </td>
                            <td class="app-table-data">
                                @user.Username
                            </td>
                            <td class="app-table-data">
                                @user.Email
                            </td>
                            <td class="app-table-data">
                                @* phone *@
                            </td>
                            <td class="app-table-data">
                                <input class="cbx-active" type="checkbox" data-userid="@user.EmployeeId" data-key="@guid" 
                                        @(user.IsUserActive ? "checked" : "") 
                                        @(user.RoleId == (int)Constants.DefaultRoles.Principal ? "disabled" : "") />
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div id="btn-container">
                <button type="button" id="btn-delete" class="warning-btn">Delete</button>
                <button type="button" id="save-btn" class="primary-btn">Save</button>
            </div>
        </div>

    </form>

</div>

