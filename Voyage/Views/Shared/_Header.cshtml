                } *@

                <li class="nav-item">
                    <a class="nav-link" href="">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="">Contact</a>
                </li>
            </ul>

            <!-- Right side (Login & Register buttons) -->
           
        </div>
        <div>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="User"
                      asp-action="Logout"
                      method="post"
                      class="d-inline">

                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn">
                        Logout
                    </button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "User")" class="btn">
                    Login
                </a>
                <a href="@Url.Action("Register", "Company")" class="btn">
                    Register
                </a>
            }

        </div>
    </nav>
</header>


