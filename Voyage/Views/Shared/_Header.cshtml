<!-- Views/Shared/_Header.cshtml -->
<header>
    <nav id="header-nav">
        <div id="dv-nav-brand">
            <!-- Hamburger button Side Nav toggle-->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <button id="btn-side-nav-toggle" class="btn hidden" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidenav">
                    <i class="fa-solid fa-bars"></i>
                </button>
            }

            <!-- Brand / Logo -->
            <a class="navbar-brand" href="@Url.Action("Index", "Website")">
                <i class="bi bi-lightning-charge me-1"></i> My MVC App
            </a>
        </div>
       

        <!-- Toggler for mobile view -->
        @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
